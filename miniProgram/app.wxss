@import 'style/weui.wxss';
@import "style/colorui/main.wxss";
@import "style/colorui/icon.wxss";

page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  font-family: sans-serif;
  font-weight: normal;
}

.container {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.page-head{
  padding: 60rpx 30rpx 80rpx;
  text-align: center;
}
.page-head-title{
  display: inline-block;
  padding: 0 40rpx 20rpx 40rpx;
  font-size: 32rpx;
  color: #BEBEBE;
  border-bottom: 2rpx solid #D8D8D8;
}
.page-head-desc{
  padding-top: 20rpx;
  color: #9B9B9B;
  font-size: 28rpx;
  text-align: left;
}

.attribute {
  background: #fff;
  padding: 20rpx 0;
}

.a-title {
  padding: 0 20rpx;
}

.a-list {
  display: flex;
  flex-direction: row;
  box-sizing: content-box;
  padding-right: 20rpx;
}

.a-item {
  flex: 1;
  box-sizing: content-box;
  padding-left: 20rpx;
}

.a-name {
  color: #9B9B9B;
}

.a-input {
  flex: 1;
}

.a-input input{
  border: 2rpx solid #BEBEBE;
  box-sizing: content-box;
  height: 24px;
}
.a-input picker{
  border: 2rpx solid #BEBEBE;
  flex: 1;
  box-sizing: content-box;
  height: 24px;
  line-height: 24px;
  font-size: 14px;
  padding: 0;
}
.a-input picker .picker {
  height: 24px;
  line-height: 24px;
}

.card {
  background: white;
  margin-bottom: 16rpx;
}

.card > .card-header {
  padding: 16rpx;
  display: flex;
  justify-content: space-between;
}

.card > .card-body > .item {
  padding: 16rpx;
  border-bottom: 1px solid #efefff 
}

.card > .card-body.content-wrapper {
  padding: 16rpx;
}

.bold {
  font-weight: bold
}

.hidden {
  display: none
}

.section {
  padding: 8rpx 16rpx;
}

input, picker {
  border: 1px solid gray;
  border-radius: 8rpx;
  padding: 0 8rpx;

}

.i-panel {
  position: relative;
  overflow: hidden;
}

.i-panel-title {
  font-size: 14px;
  line-height: 1;
  color: #1c2438;
  padding: 20px 16px 10px;
}

.i-panel-title-hide-top {
  padding-top: 0;
}

.i-panel-content {
  position: relative;
  background: #fff;
  overflow: hidden;
}

.i-panel-content::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-top-width: 1px;
  border-bottom-width: 1px;
}

.i-panel-without-border::after {
  border: 0 none;
}

.i-cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  background: #fff;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
  overflow: hidden;
}

.i-cell::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-bottom-width: 1px;
  left: 15px;
  right: 0;
}

.i-cell-bd {
  flex: 1;
}


.i-cell-text {
  line-height: 32px;
  font-size: 18px;
}

.i-cell-desc {
  line-height: 1.2;
  font-size: 12px;
  color: #80848f;
}

.i-cell-ft {
  position: relative;
  text-align: right;
  color: #495060;
}

.i-cell-access .i-cell-ft {
  padding-right: 13px;
}

.i-cell-access .i-cell-ft::after {
  content: " ";
  display: inline-block;
  width: 6px;
  height: 6px;
  position: absolute;
  top: 50%;
  right: 2px;
  border-width: 2px 2px 0 0;
  border-color: #dddee1;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -.71, 0.71, 0, 0);
}

.demo {
  padding: 10px 0;
}

.demo-title {
  font-size: 14px;
  line-height: 1;
  color: #1c2438;
  padding: 10px;
  background: #fff;
  margin-bottom: 10px;
}

.demo-title .title {
  line-height: 1;
  margin-bottom: 30rpx;
}

.d-con {
  padding: 6px 0 12px 0;
}

.is-item {
  background: #fff;
  padding: 12px 15px;
  font-size: 14px;
  border-bottom: 1px solid #e9eaec;
}
.is-title {
